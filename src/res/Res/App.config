<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="res" type="SimpleConfig.Section, SimpleConfig" />
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1" />
  </startup>

  <connectionStrings>
    <add name="res" connectionString="Data Souce=.\SQLEXPRESS;Initial Catalog=ResIntegrationTest;Integrated Security=SSPI" providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <common>
    <logging>
      <factoryAdapter type="Common.Logging.NLog.NLogLoggerFactoryAdapter, Common.Logging.NLog20">
        <arg key="configType" value="FILE-WATCH" />
        <arg key="configFile" value="~/NLog.config" />
      </factoryAdapter>
    </logging>
  </common>

  <res endpoint="inproc://127.0.0.1:9098" connectionStringName="res">
    <reader bufferSize="1048576" batchSize="2048" timeoutBeforeDrop="00:00:30"></reader>
    <writer bufferSize="1048576" batchSize="2048" timeoutBeforeDrop="00:00:30"></writer>
  </res>
</configuration>